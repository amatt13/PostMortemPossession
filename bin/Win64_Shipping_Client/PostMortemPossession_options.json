{
  // general options
  "allowControlAllies": true,  // allow control of allied parties' soldiers
  "allowControlFormations": true,  // allows the player to give orders after they control an ally (they will have access to the same formations as the player)
  "hotKey": "O",  // the button that will allow you to  take control of a soldier
  
  // message options
  "muteExceptions": true,  // do not print exception messages
  "verbose": true,  // print status messages such as "you are now controlling X "
  "messageColor": [128, 128, 128],  // Red, Green, Blue (see https://www.rapidtables.com/web/color/RGB_Color.html for help)
  "errorColor": [128, 0, 0],

  // Auto selct options
  "autoSelectPriorityHotKey": "U",  // the button to automatically find the next eligible soldier (based on autoSelectPriority and allowControlAllies)
  "autoSelectPriority": [4,  // party companions
  						 1,  // infantry 
  						 2,  // ranged
  						 3,  // cavalry
  						 3,  // horse archer
  						 2,  // skirmisher
  						 1,  // heavy infantry
  						 3,  // light cavalry
  						 3], // heavy cavalry
  "autoSelectRandomWithinPriority": true,  // groups with equal priority are selected at random (values must be between 0 and 2147483647)
}

